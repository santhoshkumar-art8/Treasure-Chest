  <style>
      button{
         margin: 60px 0px;
      }
      .con{
        padding: 30px 50px;
      }
      .data{
        padding-bottom: 20px;
      }
     
  </style>
</head>

<body>
  <header>
    <div class="container-fluid p-0">
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">
          <i class="fas fa-book-reader fa-2x mx-3"></i>Treasure Chest</a>
        
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="mr-auto"></div>
          
        </div>
      </nav>
    </div>
</header>
<section class="con">
   <div class="container-fluid mt-3 ">
        
  <strong><h2 class="data"><%=data.bname%></h2>
    <h4 class="data">PPRICE : <%=data.price%> â‚¹</h4></strong>
    <b><h6 class="data">BOOK HOLDER : <%=data.name%></h6>
    <h6  class="data" style="cursor: pointer;">MOBILE NUMBER : <%=data.num%></h6>
    <h6  class="data" style="cursor: pointer;">MAIL ID : <%=data.email%></h6></b>
        <%for(var i=0;i<1;i++){%>
            <div class="card-img-overlay">

              
               </div>
              </div>
             
                </div>
                <div class="col-pic col-lg-6 data">
                   <div class="card bg-dark text-white" style=" width: 300px; height: 340px;" >
            
              <div id="carouselExampleControls" class="carousel slide card-body" data-bs-ride="carousel" data-pause="hover" data-interval="100">
              <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/uploads/<%=data.filename[0]%>" class="d-block"width="300px" height="300px"  alt="no-img" >
                  </div>
               <% for(var j=1;j<data.filename.length;j++){ %>
                    <div class="carousel-item ">
                        <img src="/uploads/<%=data.filename[j]%>" class="d-block" width="300px" height="300px"  alt="no-img">
                      </div>
               <% } %>
               
                
              </div>
            
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
       <% }%>
      </div>
      </div>
    </section> 
    <center>
      <button class="btn btn-dark bgap"> <a href="tel: <%=data.num%>"><i class="i fas fa-phone ">&nbsp;Call Holder</i></a></button>
     <button class="btn btn-dark bgap"> <a href="mailto:<%=data.email%>"><i class="i fas fa-envelope ">&nbsp;Mail Holder</i></a></button>
    </center>
    <center>
    <div class="gap">
     <button onclick="window.location.href='/index#books'" class="btn btn-dark bgap"><i class="fas fa-arrow-left"> BACK</i></button>
    </div>
    <center>
</body>
</html>